<div class="row">
  <div class="col-md-6">
    <h1>プロフィール</h1>
    <% if @user.posts.any? %>
      <% @user.posts.each do |post| %>
        <%= link_to image_tag(post.image_url), post %>
        <% if post.comments.any? %>
          <% post.comments.each do |comment| %>
            <%= comment.user.name %>
            <%= comment.body %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <div>
      <%= link_to "設定ページへ行く", edit_user_path(@user) %>
    </div>
  </div>
  <div class="col-md-6">
    
  </div>
</div>