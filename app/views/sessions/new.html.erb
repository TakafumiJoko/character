<div class="row">
  <div class="col-md-6 offset-md-3 login_form">
    <h1>ログイン</h1>
    <%= bootstrap_form_tag(url: login_path, local: true) do |f| %>
      <%= f.email_field :email %>
      <%= f.password_field :password %>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
    <div class="accountRegistrationLead">
      <p>はじめての方はこちら</p>
      <%= link_to "新規登録", signup_path, class: "btn btn-light" %>
    </div>
    <div class="login-help">
      Forgot your password? <a href="#">Click here to reset it</a>
    </div>
  </div>
</div>
